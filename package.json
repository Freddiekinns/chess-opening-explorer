{
  "name": "chess-trainer",
  "version": "1.0.0",
  "description": "A comprehensive chess opening trainer with AI-powered features",
  "private": true,
  "type": "commonjs",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev --workspace=packages/api",
    "dev:web": "npm run dev --workspace=packages/web",
    "build": "npm run build --workspaces",
    "build:api": "npm run build --workspace=packages/api",
    "build:web": "npm run build --workspace=packages/web",
    "start": "concurrently \"npm run start:api\" \"npm run start:web\"",
    "start:api": "npm run start --workspace=packages/api",
    "start:web": "npm run start --workspace=packages/web",
    "install:all": "npm install && npm install --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "eco:import": "node packages/api/src/scripts/download-eco-data.js",
    "enrich": "node ./tools/production/enrich_openings_llm.js",
    "course:enrich": "node ./tools/production/enrich_course_data.js",
    "course:integrate": "node ./tools/production/integrate_course_data.js",
    "videos:channel-first": "node tools/production/run-channel-first-pipeline.js",
    "videos:verify-channels": "node tools/production/verify_youtube_channels.js",
    "videos:test": "jest packages/api/tests/unit/channel-first-indexer.test.js",
    "pipeline:complete": "node tools/video-pipeline/run-complete-pipeline.js",
    "pipeline:discover": "node tools/video-pipeline/1-discover-videos-rss.js",
    "pipeline:prefilter": "node tools/video-pipeline/2-prefilter-candidates.js",
    "pipeline:enrich": "node tools/video-pipeline/3-enrich-videos.js",
    "pipeline:match": "node tools/video-pipeline/video-matcher.js",
    "test": "jest",
    "test:backend": "jest",
    "test:frontend": "npm run test --workspace=packages/web",
    "test:all": "npm run test:backend && npm run test:frontend",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:setup": "jest tests/setup"
  },
  "keywords": [
    "chess",
    "openings",
    "training",
    "ai",
    "education"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "glob": "^11.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "supertest": "^7.1.3",
    "yargs": "^18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "packages/api/**/*.{js,ts}",
      "packages/shared/**/*.{js,ts}",
      "tools/**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "testMatch": [
      "**/tests/setup/*.test.js",
      "**/tests/unit/*.test.js",
      "**/tests/integration/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "./tests/setup/global-setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/packages/.*/tests/",
      "tests/unit/.*ui.*\\.test\\.",
      "tests/unit/.*design.*\\.test\\.",
      "tests/unit/.*phase.*\\.test\\."
    ]
  },
  "dependencies": {
    "@google-cloud/vertexai": "^1.10.0",
    "dotenv": "^17.2.0",
    "google-auth-library": "^10.1.0",
    "googleapis": "^153.0.0",
    "sqlite3": "^5.1.7",
    "xmldom": "^0.6.0"
  }
}