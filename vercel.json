{
  "version": 2,
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "packages/web/dist",
  "devCommand": "npm run dev:web",
  "installCommand": "npm install && npm run install:all",
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/openings/(.*)",
      "destination": "/api/openings"
    },
    {
      "source": "/api/stats/(.*)",
      "destination": "/api/stats"
    },
    {
      "source": "/api/courses/(.*)",
      "destination": "/api/courses"
    },
    {
      "source": "/api/health",
      "destination": "/api/health"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "1"
  }
}
