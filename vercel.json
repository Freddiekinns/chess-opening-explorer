{
  "version": 2,
  "buildCommand": "npm run build:web",
  "outputDirectory": "packages/web/dist",
  "devCommand": "npm run dev:web",
  "installCommand": "npm install && npm run install:all",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
